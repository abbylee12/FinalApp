<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp"
        tools:context=".player1Info">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="128dp"
            android:layout_height="177dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.464"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/miah" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="293dp"
            android:layout_height="606dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Shamiah Bridges has been at UC for three years, and this is what she says about the University: “I chose UC because of the women’s basketball program and also because it had my major and the campus is so pretty and because it’s a small campus. I like that UC has a pretty campus and that it’s a small campus so I can get to all my classes on time. The people on UC campus are very friendly !The Professor’s here truly want you to succeed as well!”"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.602"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>


